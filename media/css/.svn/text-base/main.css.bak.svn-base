/*************************************/
/****Estilos Comuns*******************/
/*************************************/
html, body { height: 100%; }
body {
    font: normal 14px Geneva, Georgia, Tahoma, Verdana;
    margin: 0;
    padding: 0;
    color: #585858;
}

* { 
    padding:0;
    margin:0;
    border:0px;
    text-indent:0;
    list-style:none;
    outline: none;
}

a {
    font-weight: bold;
    text-decoration: none;
}

.clear { clear: left; }

#site-container { background: url(../images/site-degrade.png) repeat-y center; }

.site-wrap, #footer {
    width: 964px;
    overflow: hidden;
    padding: 0 18px;
    margin: 0 auto;
}

/* Lista dos menus */
.site-menu li { float: left; }

a { font-weight: normal; color: #585858; }
a:hover { text-decoration: underline; }

h2, h3, h4 { font-weight: normal; font-size: 18px; }
h3 { font-size: 17px; }

/* Inputs e Botões */
.input, .button, .big-button {
    width: 182px;
    height: 25px;
    line-height: 25px;
    font-size: 11px;
    color: white;
    padding: 0 4px;
    background: url(../images/input.png) no-repeat left top;
    display: block;
    
    background-color: #8CB498; /*Trocar esta cor*/
}

.input:focus {background-position: left bottom; }

.button, .big-button {
    width: 70px;
    height: 25px;
    background: url(../images/button.gif) no-repeat left top;
    text-align: left;
    text-indent: 4px;
}

.button:active, .button:hover { background-position: left -25px; }

/*Botões maiores*/
.big-button { width: 162px !important; background-position: left -50px; }
.big-button:active, .big-button:hover { background-position: left -75px; }

/* Alinhamento Centralizado Vertical e Horizontalmente */
.alinha-centro {
    display: table-cell;
    text-align: center;
    vertical-align: middle;
}
.alinha-centro * { vertical-align: middle; }

/*************************************/
/****Header***************************/
/*************************************/
#site-header { 
    position: relative;
    float: left;
    margin: 0 0 20px 0;
}

#site-logo {
    display: block;
    float: left;
    margin: 5px 0;
}

#site-logo a {
    float: left;
    display: block;
}

#site-menu {
    position: absolute;
    top: 55px;
    right: 0;
}
#site-menu a { font-weight: normal; }
#site-menu li a {
    display: block;
    height: 20px;
    padding: 5px 12px;
}

#site-menu li.active a {
    color: white;
    background: #8CB498; /*Trocar esta cor*/
    -moz-border-radius: 3px 3px 3px 3px;
}

#site-banner { float: left; clear: left; }

#busca-fieldset { 
    float: right; 
    margin: 15px 10px 0 0;
}
#busca-fieldset legend { display: none; }
#busca-fieldset input { float: left; }
#busca-fieldset .button { 
    margin: 0 0 0 5px;
    width: 23px;
    padding: 0;
    background: url(../images/button-seta.gif) no-repeat;
}

/*TODO*/
#site-content { 
    clear: both;
    float: left;
    width: 100%;
}

/*************************************/
/****Footer***************************/
/*************************************/
#site-footer {
    background: url(../images/bottom-background.png) repeat-x;
    position: relative;
    margin-top: 50px;
    
    background-color: #8CB498; /*Trocar esta cor*/
}

#site-footer .site-wrap { height: 217px; position: relative; }

#site-menu-inferior { margin-top: 33px; font-size: 12px; }
#site-menu-inferior li { margin-right: 30px; }
#site-menu-inferior li a { font-weight: normal !important; }
#site-menu-inferior .menu-inferior-direita { float: right; }
#site-menu-inferior .ultimo { margin-right: 0; }

#site-logo-telefone-endereco { 
    margin-top: 28px;
    width: 550px;
    float: left;
    clear: left;
}

#site-logo-telefone-endereco a {
    float: left;
    display: block;
    background: white;
    padding: 6px 8px;
    margin: 0 18px 0 0;
}

#site-logo-telefone-endereco span { display: block; }
#site-logo-telefone-endereco span.site-telefone { margin: 2px 0 4px 0; }
#site-logo-telefone-endereco span.site-endereco, 
#site-logo-telefone-endereco span.site-cidade-estado {
    margin-bottom: 2px;
    font-size: 12px;
    color: #888C89; 
}

#site-midias-sociais {
    float: right;
    height: 81px;
    margin-top: 16px;
}

#site-midias-sociais #site-midias-sociais-esquerda,
#site-midias-sociais #site-midias-sociais-meio,
#site-midias-sociais #site-midias-sociais-direita {
    float: left;
    height: 81px;
    background: url(../images/midias-sociais-sprite.png);
}

#site-midias-sociais #site-midias-sociais-esquerda, #site-midias-sociais #site-midias-sociais-direita { width: 6px; }
#site-midias-sociais #site-midias-sociais-direita { background-position: 0 -162px; }
#site-midias-sociais #site-midias-sociais-meio { background-position: 0 -81px; color: white; padding: 0 5px; }

#site-midias-sociais h3 { 
    float: right;
    font-weight: normal;
    font-size: 16px;
    margin: 8px 9px 0 0;
}

#site-midias-sociais ul { margin-top: 10px; float: left; clear: both; }
#site-midias-sociais li { 
    float: left;
    margin: 0 9px;
    
}

#site-direitos-autorais, #site-creditos{ 
    position: absolute;
    bottom: 0px;
    left: 30px;
    font-size: 12px;
    line-height: 49px;
}

#site-creditos { left: auto; right: 30px; }


/*************************************/
/****Página Inicial*******************/
/*************************************/

    /*************************************/
    /****Destaques************************/
    /*************************************/

    #destaques {
        width: 642px;
        height: 250px;
        position: relative;
        float: left;
    }

    #destaques-menu {
        height:38px;
        position: absolute;
        top: 0;
        left: 0;
    }

    #destaques-menu li {
        display: block;
        float: left;
        line-height: 33px;
        width: 210px;
        text-align: center;
    }

    #destaques-menu li a {
        font-size: 15px;
        font-weight: normal;
    }

    #destaques-menu li.selected {
        background: url(../images/destaques-menu-background.png) no-repeat top center;
        line-height: 36px;
        height: 38px;
        width: 227px;
        text-shadow: 1px 1px 3px #333;
        
        background-color: #7FAC8D; /*Trocar esta cor*/
    }

    #destaques-menu li.selected a {
        color: white !important;
        margin-top: -5px;
    }

    #destaques-menu li.selected a:hover { text-decoration: none; }

    .destaques-container {
        background-color: #F0F0F0;
        width: 642px;
        height: 217px;
        margin-top: 34px;
    
        -moz-border-radius: 4px 4px 4px 4px;
    }

    /* Setas */ 
    .seta-esquerda, .seta-direita {
    	display: block;
    	position: absolute;
    	top: 125px;
    	left: -14px;
    	width: 28px;
    	height: 48px;
    	background: url(../images/destaques-setas.png) no-repeat left top;
	
        /* Customização de Cor das Setas */
        background-color: #8CB498; /*Trocar esta cor*/
    }

    .seta-direita {
    	left: auto;
    	right: -14px;
    	background-position: left -96px;
    }

    a.seta-esquerda:hover { background-position:left -48px; }
    a.seta-direita:hover { background-position:left -144px; }
	
    /* Destaques Scroller */
    .destaques-scroller-wrap {
        width: 580px;
        height: 176px;
        margin: 20px 0 0 26px;
        float: left;
        overflow:hidden;
    }

    .destaques-scroller { 
        height: 170px;
        float: left;
        /* TODO: Ajustar com javascript esta largura */
        width: 2000px;
    }

    /* Colunas dos Destaques Scroller*/
    .destaques-column {
        width: 282px;
        float: left;
        margin-right: 16px;
    }

    .destaque-imagem {
        display: block;
        width: 282px;
        height: 120px;
        background-color: white;
        border-bottom: solid 2px #8CB498; /*Trocar esta cor*/
        float: left;
    }

    .destaque-imagem span {
        display: inline-block;
        height: 100%;
        width: 1px;
    }

    .destaque-informacoes {
        height: 55px;
        width: 282px;
        font-size: 13px;
        background: #F9F9F9;
    }

    /*************************************/
    /****Twitter**************************/
    /*************************************/
    #twitter {
        float: right;
        width: 311px;
    }
    
    #twitter h2 {
        display: block;
        height: 47px;
        width: 311px;
        background: url(../images/twitter-background.png) no-repeat left 5px;

        font-weight: normal;
        text-align: right;
        line-height: 44px;
        color: #3F80A2;
    }
    
    #twitter-lista {
        float: left;
        display: inline; /* IE6 hack*/
        width: 299px;
        margin-left: 12px;
        background: #D4E4EC;
    }
    
    #twitter-lista li {
        padding: 0 15px;
        font-size: 13px;
        margin: 9px 0;
    }
    
    #twitter-lista .twitter-data { 
        display: inline-block;
        width: 85px;
        font-size: 11px;
        color: #7D7D7D;
    }
    
    #twitter-lista .twitter-tweet a { 
        font-weight: bold;
        color: #3A7D9F;
    }
    
    #twitter-siga {
        float: left;
        clear: left;
        display: block;
        width: 311px;
        line-height: 40px;
        background: url(../images/twitter-background.png) no-repeat left -41px;
        
        text-align: right;
        font-size: 12px;
        font-weight: normal;
    }
    
    #twitter-center { text-align: center; }
    
    /*************************************/
    /****Notícias*************************/
    /*************************************/
    #ultimas-noticias {
        float: left;
        clear: left;
        width: 580px;
        background: #8CB498 url(../images/noticias-faixa.png) repeat-y right; /*Trocar esta cor*/
        padding: 0 7px 0 0;
        margin: 40px 0 0 0;
    }
    
    #noticias-wrap {
        padding: 10px 20px 10px 15px;
        background: white;
    }
    
    #noticias-wrap h2 {
        display: block;
        float: left;
    }
    
    #noticias-wrap .noticias-assine-o-feed {
        display: block;
        float: left;
        width: 24px;
        height: 36px;
        margin-left: 3px;
        background: url(../images/rss-icon.gif) no-repeat left -4px;
    }
    
    #noticias-wrap .noticias-assine-o-feed span { display: none; }
    
    #noticias-lista { clear: left; margin: 10px 0 0 0; }
    
    #noticias-lista li {
        display: block;
        margin: 0 0 20px 0;
    }
    
    #noticias-lista li span.noticias-data, #noticias span.noticias-data {
        font-size: 11px;
        display: block;
        color: #8CB498; /*Trocar esta cor*/
    }
    
    
    /*************************************/
    /****Newsletter***********************/
    /*************************************/
    #newsletter {
        padding-top: 10px;
        float: right;
        width: 350px;
    }
    
    #newsletter-icon {
        float: left;
        line-height: 28px;
        padding-right: 30px;
        background: url(../images/newsletter-icon.gif) no-repeat right top;
    }
    
    #newsletter-txt { 
        display: block; 
        clear: left;
        padding: 12px 0;
    }
    
    #newsletter input { float: left; clear: left; margin-bottom: 10px; }
    
    #newsletter #form-status { 
        color: white;
        display: none;
        float: left;
        -moz-border-radius: 4px 4px 4px 4px;
        padding: 6px 6px 6px 10px;
        margin: 0 0 10px 0;
        width: 86%;
    }

    #newsletter .success {
        background: green;
        display: block;
    }
    
    #newsletter .error {
        background: red;
        display: block;
    }


/*************************************/
/****Conteudo Editável****************/
/*************************************/
#conteudo-editavel { overflow: hidden; }
#conteudo-editavel h2, #conteudo-editavel h3 { display: block; margin-bottom: 12px; }
#conteudo-editavel h3 { margin-top: 10px; }
#conteudo-editavel p { margin-bottom: 10px; text-align: justify; }

#conteudo-editavel h2, #conteudo-editavel h3 { display: block; float: left; clear: left; width: 100%; }

#conteudo-editavel blockquote, #conteudo-editavel blockquote span {
    display: block;
    clear: left;
    float: left;
    width: 965px;
    background: #ccd7ce url(../images/blockquote.gif) no-repeat left top;
    padding: 30px 0 0 0;
}

#conteudo-editavel blockquote span { 
    display: block; background-position: -965px bottom;
    width: 905px;
    padding: 0 30px 30px 30px;
    text-align: center;
    font-style: italic;
}

/*************************************/
/****Galerias Diversas****************/
/*************************************/
#galerias-diversas { margin-top: 15px; }

    /*************************************/
    /****Galeria de Imagens***************/
    /*************************************/
    #galeria-imagens { 
        margin: 20px 0 0 0;
        float: left;
    }

    #galeria-imagens ul { overflow: hidden; margin-top: 15px; }

    #galeria-imagens ul li {
        float: left;
        padding: 0 12px;
    }
    
    .galeria-noticias ul li { padding: 0 4px !important; }

    /*************************************/
    /****Galeria de Videos****************/
    /*************************************/
    #galeria-videos {
        margin: 20px 0 0 0;
        float: right;
    }
    
    #galeria-videos ul { overflow: hidden; margin-top: 15px; }
    
    #galeria-videos li a { float: right; margin-right: 5px ;}
    
    #galeria-videos h3 { display: block; text-align: right; margin-right: 5px; }

    /*************************************/
    /****Galeria de Anexos****************/
    /*************************************/
    #galeria-anexos {
        margin: 20px 0 0 0;
        float: left;
        clear: left;
    }
    
    #galeria-anexos ul { overflow: hidden; margin-top: 15px; }
    #galeria-anexos li { float: left; margin-right: 25px; }
    #galeria-anexos li a {
        display: block;
        padding: 4px 8px 4px 48px;
        background: url(../images/anexos-sprite.png) no-repeat 5px 4px;
    }
    
    #galeria-anexos li a.pdf { background-position: 5px -39px; }
    #galeria-anexos li a.doc { background-position: 5px -74px; }
    
    #galeria-anexos li a span { display: block; }
    #galeria-anexos li a span.tamanho-arquivo { font-size: 12px; color: #9D9D9D; }
    #galeria-anexos li a:hover { text-decoration: none; background-color: #eee; }
    #galeria-anexos li a:hover span.nome-arquivo { text-decoration: underline; }

/*************************************/
/****Notícias*************************/
/*************************************/
#noticias span.noticias-data { margin-bottom: 15px; }
.noticias-inner-image { margin: 15px 0; }
.noticias-inner-subtitle {
    display: block;
    clear: left;
    font-size: 11px;
}

#noticias #ultimas-noticias { background: none !important; }

#noticias #galerias-diversas { margin: 0; }

.noticias-view .big-button, .noticias-list .big-button {
    clear: left;
    float: left;
    margin-top: 40px;
}

#noticias .titulo-prev { color: #ccc; }

.titulo-arrow { 
    color: #8CB498; /*Trocar esta cor*/
    font-size: 1.2em;
}

.noticias-list #ultimas-noticias { margin: 0; }

/*************************************/
/****Produtos*************************/
/*************************************/
#produtos #categorias {
    float: left;
    width: 244px;
    border-right: solid 1px #ccc;
    position: relative;
    padding-bottom: 20px;
}

#produtos #lista-de-produtos, #produtos #detalhes-do-produto {
