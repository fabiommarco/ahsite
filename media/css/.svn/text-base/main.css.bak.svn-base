    width: 695px;
}

#produtos #categorias-list {
    width: 245px;
    margin-top: 15px; 
}

#produtos #categorias-list > li {
    padding: 10px 0 10px 10px;
}

#produtos #categorias-list li.selected {
    border: solid 1px #ccc;
    border-right: solid 1px white;
    margin-bottom: 12px;
        
    -moz-border-radius: 3px 0 0 3px;
}

#produtos #categorias-list ul { margin-top: 8px; }

#produtos #categorias-list ul li {
    background: url(/media/images/subcategoria-arrow.gif) no-repeat 3px center;
    padding: 6px 0 6px 15px;
}

#produtos #categorias-list ul li.selected {
    background-position: 8px center;
    padding-left: 20px;
}

#produtos #categorias-list ul li a { color: #737373; }

#produtos .produtos-lista { margin-top: 20px; }
#produtos .produtos-lista li { float: left; margin-right: 12px; }

#produtos .produtos-lista .produto-imagem {
    display: block;
    width: 333px;
    border: solid 1px #D6D6D6;
    border-bottom: solid 2px #8CB498; /*Trocar esta cor*/
    text-align: center;
    padding: 15px 0;
    min-height: 100px;
}

#produtos .produtos-lista .produto-nome {
    display: block;
    width: 315px;
    text-align: center;
    padding: 5px 10px;
    background: #F2F2F2;
}

#produtos .nenhum-produto { margin-top: 10px; }

#produtos #detalhes-do-produto h3 {
    margin: 0 0 10px 0;
}

#produtos #produto-informacoes, #produtos #produto-especificacoes {
    margin: 20px 0;
}

#produtos #produto-imagens {
    margin: -30px 0 0 20px;
    float: right;
    width: 324px;
}

#produto-imagens .ampliar {
    display: block;
    margin: 0 0 4px 0;
    font-size: 12px;
    padding-left: 20px;
    height: 20px;
    background: url(/media/images/ampliar.gif) no-repeat 0 center;
}

#produtos #imagem-principal {
    border: solid 1px #D6D6D6;
    border-bottom: solid 2px #8CB498; /*Trocar esta cor*/
    width: 322px;
    height: 230px;
}

#produtos #produto-imagens ul { margin: 9px 0 0 0; }

#produtos #produto-imagens ul li {
    float: left;
    width: 85px;
    height: 55px;
    border: solid 1px #ccc;
    overflow: hidden;
    margin: 0 6px 0 0;
}

#produtos #produto-imagens ul li img { width: 90px; }

/*************************************/
/****Paginação*************************/
/*************************************/
.pagination { 
    margin: 20px 0 0 0;
    clear: left;
    float: left;
    width: 100%;

}

.pagination .step-links {
    display: block;
    text-align: center;
}